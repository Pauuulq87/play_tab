{
  "manifest_version": 3,
  "name": "Play Tab",
  "version": "1.0.0",
  "description": "瀏覽器分頁與書籤管理插件",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "bookmarks"
  ],
  "action": {
    "default_title": "開啟 Play Tab",
    "default_popup": "index.html"
  },
  "options_page": "index.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}

